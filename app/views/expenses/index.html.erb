<div>
  <div class="min-w-full">
  <div class="flex flex-row justify-between mb-2 mt-2 p-2 rounded-lg bg-white shadow-lg">
    <p><%= @category.name%> Expense</p>
    <p><%=number_to_currency(@category.expenses.sum(:amount))%></p>
  </div>
  <% @expenses.each do |expense| %>
    <div class="flex flex-col">
      <%= render 'expenses', expense: expense %>
    </div>
  <% end %>
   <%= link_to "Back To Category", categories_path, class: "inline-block align-baseline font-bold m-2 text-blue-500 hover:text-blue-800" 
  %>
   <div class=" fixed bg-green-600 bottom-0 left-0 right-0 py-3 flex flex-col items-center justify-center">
    <%= link_to "Add a new Transaction", new_category_expense_path, class:"text-white border border-2xl pt-2 pb-2 px-5 py-5 " %>
  </div>
</div>