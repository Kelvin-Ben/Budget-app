<%= form_with model: category, local: true, class: "bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md" do |form| %>
<%= render "shared/error_form_message", resource: category %>
    <div class="mb-4">
      <%= form.label "Name", class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= form.text_field :name,
                           autocomplete: "name",
                           placeholder: "Shoes",
                           class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none shadow focus:shadow-outline" %>
    </div>
    <div class="mb-4">
      <%= form.label "Icon", class: "block font-bold mb-2 text-gray-700 text-sm"  %>
      <%= form.text_field :icon, 
                           autocomplete: "name",
                           placeholder: "Image URL",
                           class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none shadow focus:shadow-outline" %>

    </div>
    <div class="mb-4">
      <%= form.submit "#{action_name == 'edit' ? 'Update' : 'Save'}",
                class: "button bg-blue-500 hover:bg-blue-700 font-bold text-white focus:outline-none py-2 px-4 rounded focus:shadow-outline w-full" %>
    </div>

    <%= link_to "Back", categories_path,
      class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800"
      %>
<% end %>